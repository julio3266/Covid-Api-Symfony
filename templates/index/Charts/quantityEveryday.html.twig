<script>

    var regions = ["{{ regions[1].name }}"," {{ regions[2].name }}", "{{ regions[3].name }}", "{{ regions[4].name }}", "{{ regions[5].name }}"];
    var days = [];
    var values = [];
    var i = 0;
    var colors = ["red", "blue", "yellow", "green", "gray", "white"]
    {% for  day in allDays %}
        days.push("{{ day }}")
    {% endfor %}

    {% for  key, data in regionsTimeLine %}
    values.push({
        label: "{{ key }}",
        backgroundColor: "blue",
        borderColor: colors[i],
        data: "{{ data|join(',') }}",
        fill: false,
    })

    i++;
    {% endfor %}
    var config = {
        type: 'line',
        data: {
            labels: days,
            datasets: values,
        },
        options: {
            responsive: true,
            title: {
                display: true,
                text: 'Evolução covid'
            },
            tooltips: {
                mode: 'index',
                intersect: false,
            },
            hover: {
                mode: 'nearest',
                intersect: true
            },
            scales: {
                xAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Month'
                    }
                }],
                yAxes: [{
                    display: true,
                    scaleLabel: {
                        display: true,
                        labelString: 'Value'
                    }
                }]
            }
        }
    };
    window.onload = function() {
        var ctx = document.getElementById('chartTimeLine').getContext('2d');
        window.myLine = new Chart(ctx, config);
    };

</script>